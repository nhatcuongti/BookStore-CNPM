<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="10dp"
    app:contentPadding="20dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgBookCart"
            android:padding="1dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Name Books"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/imgBookCart"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/imgBookCart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgBookCart"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/priceBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/nameBook"
            app:layout_constraintRight_toRightOf="@id/nameBook"
            app:layout_constraintTop_toBottomOf="@id/nameBook"
            app:layout_constraintVertical_bias="0.36" />

        <ImageButton
            android:id="@+id/btnRemoveOfOrder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#d35400"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="@id/btnAddOfOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/numberProduct"
            app:layout_constraintTop_toTopOf="@id/btnAddOfOrder" />

        <TextView
            android:id="@+id/numberProduct"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:paddingHorizontal="10dp"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/btnAddOfOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/btnAddOfOrder"
            app:layout_constraintTop_toTopOf="@id/btnAddOfOrder"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btnAddOfOrder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#d35400"
            android:src="@drawable/ic_baseline_add_24"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/priceBook"
            app:layout_constraintTop_toBottomOf="@id/priceBook"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


