<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/senderInReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender : username"
        android:textSize="20sp"
        android:textColor="#27ae60"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/reportedUserInReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report to : Username"
        android:textColor="#c0392b"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/senderInReport"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/senderInReport"
        app:layout_constraintTop_toBottomOf="@id/senderInReport"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titleInReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tittle: This guy spam on my product"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/senderInReport"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/senderInReport"
        app:layout_constraintTop_toBottomOf="@id/reportedUserInReport"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>